function showhidefields(executionContext) {
    var formContext = executionContext.getFormContext();
	var team = formContext.getAttribute("ukn_team").getValue();
	
	if (team == 968200005 || team == 968200007 || team == 968200008 || team == 968200009) {
		formContext.getControl("ukn_bbbgroupinvolved").setVisible(true);
        let bbbGroupInvolved = formContext.getAttribute("ukn_bbbgroupinvolved").getValue(); 
        if(bbbGroupInvolved?.includes(968200006) && team === 968200009)
        {
            formContext.getControl("ukn_sulcogroupinvolved").setVisible(true);
        }
        else{
            formContext.getControl("ukn_sulcogroupinvolved").setVisible(false);
        }
	}
	else {
		formContext.getControl("ukn_bbbgroupinvolved").setVisible(false);
                formContext.getControl("ukn_sulcogroupinvolved").setVisible(false);
	}
	if (team ==968200007){
		formContext.getControl("ukn_stakeholdertype").setVisible(true);
		formContext.getControl("ukn_topicskeywords").setVisible(true);
	}
	else {
		formContext.getControl("ukn_stakeholdertype").setVisible(false);
		formContext.getControl("ukn_topicskeywords").setVisible(false);
	}
}